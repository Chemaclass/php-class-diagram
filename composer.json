{
    "name": "smeghead/php-class-diagram",
    "description": "read php source and output PlantUML file.",
    "version": "0.0.1",
    "type": "command",
    "require": {
        "php" : ">=7.4",
        "symfony/finder": "^5.3",
        "nikic/php-parser": "^4.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "clue/phar-composer": "^1.2"
    },
    "license": "Apache License 2.0",
    "autoload": {
        "psr-4": {
            "Smeghead\\PhpClassDiagram\\": "src/"
        }
    },
    "authors": [
        {
            "name": "smeghead",
            "email": "smeghead7@gmail.com"
        }
    ],
    "scripts": {
        "test": [
            "php vendor/phpunit/phpunit/phpunit"
        ],
        "build": [
            "php -d phar.readonly=off ./vendor/bin/phar-composer build ./"
        ]
    },
    "bin": [
        "src/PhpClassDiagram.php"
    ]
}
